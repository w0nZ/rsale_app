<% provide(:title, "New Category") %>
<div class="category">
  <h2>Neue Kategorie anlegen</h2>
</div>

<div class="form-style">
    <%= form_for(@category) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.submit "Kategorie anlegen", class: "btn-primary" %>
    <% end %>

</div>
