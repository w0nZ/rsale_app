<div class="container">
<div class="category">
  <h2>Benutzerprofil</h2>
</div>
<div class="product-view">
  <div class="product-name">
    <%= @user.username %>
  </div>
  <div class="product-price">
    <%= @user.email %>
  </div>
  <div class="product-actions">
   <%= link_to "Edit", edit_user_path(@user), class: "btn-warning" %>
   <%= link_to "Delete", user_path(@user), method: :delete, data: { confirm: "Are you sure you want to delete this user?"}, class: "btn-error" %>
  </div>
</div>
</div>
