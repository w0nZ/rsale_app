<div clas="container">
<h2 align="center"><%= @product.name %></h2>
  <div class="product-img">
    <%= image_tag @product.picture.url if @product.picture? %>
  </div>
  <div class="product-name">
    <%= link_to @product.name, product_path(@product) %>
  </div>
  <div class="product-price">
    <%= @product.price %>â‚¬
  </div>
  <div class="product-description">
   <%= truncate(@product.description, length: 100) %>
  </div>
  <% if logged_in? %>
  <div class="product-actions">
   <%= link_to "Edit", edit_product_path(@product), class: "btn-warning" %>
   <%= link_to "Delete", product_path(@product), method: :delete, data: { confirm: "Are you sure you want to delete this product?"}, class: "btn-error" %>
  </div>
  <% end %>
</div>
