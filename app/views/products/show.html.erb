<div class="container">
<div class="product-view">
  <div><%= image_tag @product.picture.url if @product.picture? %></div>
  <div class="product-name">
    <%= @product.name %>
  </div>
  <div class="product-price">
    <%= @product.price %>€
  </div>
  <% if !logged_in? %>
  <div class="product-messaging">
    <a href="<%= build_whatsapp_link("Ich möchte folgendes Produkt erwerben", product_path(@product)) %>" class="btn-primary">WhatsApp</a>
    <a href="<%= build_share_link(product_path(@product)) %>" class="btn-secondary">Link kopieren</a>
  </div>
  <% else %>
  <div class="product-actions">
   <%= link_to "Edit", edit_product_path(@product), class: "btn-warning" %>
   <%= link_to "Delete", product_path(@product), method: :delete, data: { confirm: "Are you sure you want to delete this product?"}, class: "btn-error" %>
  </div>
  <% end %>
</div>
</div>
