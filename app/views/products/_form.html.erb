<div class="row">
 <div class="col-xs-12">
  <%= form_for(@product, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <div class="form-group">
   <div class="control-label col-sm-2">
    <%= f.label :name %>
   </div>
   <div class="col-sm-6">
    <%= f.text_field :name, class: "form-control", placeholder: "Name des Produkts", autofocus: true %>
   </div>
  </div>
  <div class="form-group">
   <div class="control-label col-sm-2">
    <%= f.label :price %>
   </div>
   <div class="col-sm-6">
    <%= f.text_field :price, class: "form-control", placeholder: "Runder Preis", autofocus: true %>
   </div>
  </div>
  <div class="form-group">
   <div class="control-label col-sm-2">
    <%= f.label :description %>
   </div>
   <div class="col-sm-6">
    <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Beschreibungstext" %>
   </div>
  </div>
  <div class="form-group">
   <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit class: 'btn btn-primary btn-large' %>
   </div>
  </div>

<% end %>

<%= link_to 'Back', products_path %>
 </div>
</div>
