<% if @product.errors.any? %>
 <h2>The following errors prevented the product from saving:</h2>
 <ul>
 <% @product.errors.full_messages.each do |msg|%>
 <li><%= msg %></li>
 <% end %>
 </ul>
<% end %>
<%= form_for @product do |f| %>
 <p>
  <%= f.label :name %><br>
  <%= f.text_field :name %>
 </p>
 <p>
  <%= f.label :price %><br>
  <%= f.text_field :price %>
 </p>
 <p>
  <%= f.label :description %><br>
  <%= f.text_area :description %>
 </p>
 <p>
  <%= f.submit %>
 </p>
<% end %>
